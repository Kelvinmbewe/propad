{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "Node",
    "types": [],
    "declaration": true,
    "sourceMap": true,
    "outDir": "dist",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "strictBindCallApply": true,
    "strictFunctionTypes": true,
    "noFallthroughCasesInSwitch": true,
    "noEmit": false
  },
  "include": [
    "src/**/*",
    "test/**/*",
    "vitest.config.ts",
    "eslint.config.mjs"
  ],
  "exclude": [
    "node_modules"
  ]
}