{
  "name": "propad-monorepo",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "apps/*",
    "packages/*",
    "scripts"
  ],
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "dev": "npm run dev --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "artifact": "node scripts/create-artifact.mjs"
  },
  "devDependencies": {
    "@types/node": "20.11.30",
    "prettier": "3.2.5",
    "typescript": "5.4.5"
  }
}
