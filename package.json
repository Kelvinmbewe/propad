{
  "name": "propad-monorepo",
  "private": true,
  "version": "0.1.0",
  "packageManager": "pnpm@10.19.0",
  "engines": {
    "node": ">=18.18.0"
  },
  "scripts": {
    "preinstall": "node -e \"const ua=process.env.npm_config_user_agent||''; if(!ua.includes('pnpm')) console.warn('[warn] Please use pnpm. Detected UA:', ua);\"",
    "build": "npm run build --workspaces --if-present",
    "dev": "npm run dev --workspaces --if-present",
    "lint": "eslint .",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "artifact": "node scripts/create-artifact.mjs",
    "build:og": "node scripts/render-social-share.mjs"
  },
  "devDependencies": {
    "@resvg/resvg-js": "2.6.1",
    "@types/node": "20.11.30",
    "prettier": "3.2.5",
    "typescript": "5.4.5",
    "eslint": "^9.0.0",
    "@eslint/js": "^9.0.0",
    "typescript-eslint": "^8.0.0",
    "globals": "^15.0.0"
  },
  "pnpm": {
    "overrides": {
      "react-leaflet-cluster": "3.1.1",
      "next": "14.2.3",
      "bullmq": "4.18.3"
    }
  }
}
